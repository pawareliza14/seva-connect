<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Carpentary</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #1a1a1a;
            color: #ffffff;
            margin: 0;
            padding: 0;
        }

        h1 {
            text-align: center;
            color: #f78bf8; /* Neon pink */
            margin-bottom: 30px;
        }

        .service-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 20px;
            margin: 0 auto;
            max-width: 800px;
        }

        .service {
            background-color: #292929;
            padding: 20px;
            border-radius: 5px;
            transition: background-color 0.3s;
            width: 200px;
            text-align: center;
            cursor: pointer;
        }

        .service:hover {
            background-color: #373737; /* Slightly lighter shade on hover */
        }

        .service h2 {
            color: #f78bf8; /* Neon pink */
            margin-bottom: 10px;
        }

        .service p {
            font-size: 18px;
        }

        .cart {
            background-color: #292929;
            padding: 20px;
            border-radius: 5px;
            max-width: 400px;
            margin: 30px auto;
        }

        #cartItems div {
            padding: 5px;
            border-bottom: 1px solid #373737;
            display: flex;
            justify-content: space-between;
        }

        #cartItems div:last-child {
            border-bottom: none;
        }

        button {
            background-color: #00e676;
            color: #ffffff;
            border: none;
            padding: 10px 20px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 4px 2px;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        button:hover {
            background-color: #00b248; /* Darker neon green on hover */
        }

        /* Neon Dark Theme */
        .neon-text {
            text-shadow: none; /* Removed the glowing effect */
        }

       

        /* Additional Professional Styling */
        .container {
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .cart-title {
            font-size: 24px;
            margin-bottom: 10px;
            text-align: center;
        }

        .total-amount {
            font-size: 20px;
            text-align: right;
            margin-bottom: 10px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="neon-text">Carpentry</h1>
        <div class="service-container">
            <div class="service" id="Wear and tear " onclick="addToCart('Wear and tear', 700)">
                <h2 class="neon-text">Wear and tear</h2>
                <p>Rate: Rs 700</p>
                <button class="neon-button">Add to Cart</button>
            </div>
            <div class="service" id="Polishing" onclick="addToCart('Polishing', 1000)">
                <h2 class="neon-text">Polishing</h2>
                <p>Rate: Rs 1000</p>
                <button class="neon-button">Add to Cart</button>
          </div>
            <div class="service-container">
            <div class="service" id="wooden repairing " onclick="addToCart('wooden repairing', 1200)">
                <h2 class="neon-text">Wooden repairing</h2>
                <p>Rate: Rs 1200</p>
                <button class="neon-button">Add to Cart</button>
            </div>
         <div class="service" id="General appointment " onclick="addToCart('General appointment', 450)">
                <h2 class="neon-text">General appointment</h2>
                <p>Rate: Rs 450</p>
                <button class="neon-button">Add to Cart</button>
            </div>
        <div class="cart">
            <h2 class="cart-title neon-text">Cart</h2>
            <div id="cartItems">
                <!-- Cart items will be displayed here -->
            </div>
            <div class="total-amount neon-text">
                Total: Rs0
            </div>
            <button class="neon-button" onclick="clearCart()">Clear Cart</button>
        </div>
    

    <script>
        // JavaScript functions for cart functionality
        let cart = [];
        let totalAmount = 0;

        function addToCart(service, rate) {
            cart.push({ service, rate });
            totalAmount += rate;
            updateCart();
        }

        function updateCart() {
            const cartItems = document.getElementById('cartItems');
            cartItems.innerHTML = '';
            cart.forEach(item => {
                const cartItem = document.createElement('div');
                cartItem.innerText = `Rs{item.service} - Rs${item.rate}`;
                cartItems.appendChild(cartItem);
            });

            const totalElement = document.querySelector('.total-amount');
            totalElement.innerText = `Total: Rs${totalAmount}`;
        }

        function clearCart() {
            cart = [];
            totalAmount = 0;
            updateCart();
        }
    </script>
</body>
</html>